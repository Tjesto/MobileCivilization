<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mobilecivilisation"
    android:versionCode="0000002"
    android:versionName="0.0.2" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="21" />
    
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/MobCiv" >
        <activity android:name="com.mobilecivilisation.ui.activities.EntryPointActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity 
            android:name="com.mobilecivilisation.ui.activities.MainScreenActivity"/>
        <activity 
            android:name="com.mobilecivilisation.ui.activities.MainScreenActivityL"/>
        <activity 
            android:name="com.mobilecivilisation.ui.activities.SettingsMenuActivity"/>
        <activity 
            android:name="com.mobilecivilisation.ui.activities.SettingsMenuActivityL"/>
        <activity android:name="com.mobilecivilisation.ui.activities.DebugMenuActivity"/>
        <activity
            android:name="com.mobilecivilisation.ui.activities.MainGameActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme" >            
        </activity>
    </application>

</manifest>
